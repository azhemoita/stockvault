<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">

    <changeSet id="003-create-stock-prices-table" author="stockvault">

        <createTable tableName="stock_prices">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name="stock_id" type="BIGINT">
                <constraints nullable="false" />
            </column>

            <column name="date" type="DATE">
                <constraints nullable="false" />
            </column>

            <column name="open" type="DOUBLE PRECISION">
                <constraints nullable="false" />
            </column>

            <column name="close" type="DOUBLE PRECISION">
                <constraints nullable="false" />
            </column>

            <column name="high" type="DOUBLE PRECISION">
                <constraints nullable="false" />
            </column>

            <column name="low" type="DOUBLE PRECISION">
                <constraints nullable="false" />
            </column>

            <column name="volume" type="BIGINT">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="stock_prices"
            baseColumnNames="stock_id"
            referencedTableName="stocks"
            referencedColumnNames="id"
            constraintName="fk_stock_prices_stock" />

        <addUniqueConstraint
            tableName="stock_prices"
            columnNames="stock_id, date"
            constraintName="uk_stock_date" />

        <createIndex
            indexName="idx_stock_prices_stock_date"
            tableName="stock_prices">
            <column name="stock_id" />
            <column name="date" />
        </createIndex>

    </changeSet>
</databaseChangeLog>
<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">

    <changeSet id="004-user-saved-stocks" author="stockvault">

        <createTable tableName="user_saved_stocks">
            <column name="id" type="BIGSERIAL">
                <constraints nullable="false" />
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" />
            </column>

            <column name="stock_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="user_saved_stocks" baseColumnNames="user_id"
                                 constraintName="fk_saved_user"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="user_saved_stocks" baseColumnNames="stock_id"
                                 constraintName="fk_saved_stock"
                                 referencedTableName="stocks"
                                 referencedColumnNames="id" />

        <addUniqueConstraint tableName="user_saved_stocks" columnNames="user_id, stock_id"
                             constraintName="uk_user_stock" />


    </changeSet>
</databaseChangeLog>